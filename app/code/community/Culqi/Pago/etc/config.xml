<?xml version="1.0"?>
<config>
  <modules>
    <Culqi_Pago>
      <version>1.2.0</version>
    </Culqi_Pago>
  </modules>

  <global>


    <helpers>
      <pago>
        <class>Culqi_Pago_Helper</class>
      </pago>
    </helpers>

    <blocks>
      <pago>
        <class>Culqi_Pago_Block</class>
      </pago>
    </blocks>

    <models>
      <pago>
        <class>Culqi_Pago_Model</class>
      </pago>
    </models>

    <resources>
      <pago_setup>
        <setup>
          <module>Culqi_Pago</module>
        </setup>
      </pago_setup>
    </resources>

  </global>

  <default>
    <payment>
      <pago>
        <active>1</active>
        <model>pago/pago</model>
        <order_status>pending</order_status>
        <title>Pago</title>
        <allowspecific>0</allowspecific>
        <payment_action>sale</payment_action>
      </pago>
    </payment>
  </default>

  <frontend>
    <routers>
      <pago>
        <use>standard</use>
        <args>
          <module>Culqi_Pago</module>
          <frontName>pago</frontName>
        </args>
      </pago>
    </routers>

    <!-- Layout adiciones AJAX -->
    <layout>
     <updates>
       <pago>
         <file>ajaxlayout.xml</file>
       </pago>
     </updates>
   </layout>



  </frontend>

  <!--  ... rest your extension configuration ... -->
   <crontab>
       <jobs>
           <cancel_pending_orders>
               <schedule>
                   <cron_expr>0,30 * * * *</cron_expr>
               </schedule>
               <run>
                   <model>Culqi_Pago/cron::cancelPendingOrders</model>
               </run>
           </cancel_pending_orders>
       </jobs>
   </crontab>

</config>
